---
import "../styles/global.css";
import Header from "../components/PageHeader.astro";
import Content from "../components/PageContent.astro";
import Footer from "../components/PageFooter.astro";
import Semesters from "../components/Semesters.astro";
import Showcase from "../components/Showcase.astro";
import Features from "../components/Features.astro";
import CareerPage from "../components/CareerPage.astro";
import CareerSection from "../components/CareerSection.astro";

import { ViewTransitions } from "astro:transitions";


let { title } = Astro.props;
---


<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />


		<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#ffffff">





		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<ViewTransitions />
	</head>
	<body>
		<div id="container">
			<Header header={title}/> 
			<Content>
				<slot />
			</Content>
			<Footer />
		</div>
	</body>
</html>
